<Window x:Class="WorkOrderX.WPF.Views.DateSelectionDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d"
        Icon="/Resources/Request.ico"
        Title="Изменение даты" 
        Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF0F5F5">

	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>

		<Style TargetType="Calendar">
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderBrush" Value="#FF6699CC"/>
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="Margin" Value="0 0 0 10"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>

		<Style TargetType="Button">
			<Setter Property="Background" Value="#FF0066CC"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="#FF003366"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Padding" Value="8 4"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF0080FF"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Заголовок -->
		<Border Background="#FF0066CC" CornerRadius="5" Padding="5" Margin="0 0 0 10">
			<TextBlock Text="Выберите новую дату:" 
                       FontSize="16"
                       FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center"/>
		</Border>

		<!-- Текущая дата -->
		<TextBlock Grid.Row="1" Text="{Binding CurrentDate, StringFormat='Текущая дата: {0:dd.MM.yyyy}'}"
                   Margin="0 0 0 10"
                   FontSize="14"
                   FontWeight="DemiBold"/>

		<!-- Календарь -->
		<Calendar Grid.Row="2" 
                  SelectedDate="{Binding SelectedDate}"
                  DisplayDate="{Binding CurrentDate}"
                  FontSize="15"
                  FontWeight="DemiBold"
                  SelectedDatesChanged="Calendar_SelectedDatesChanged"
                  PreviewMouseUp="Calendar_PreviewMouseUp">
			<Calendar.CalendarButtonStyle>
				<Style TargetType="CalendarButton">
					<Style.Triggers>
						<Trigger Property="Selector.IsSelected" Value="True">
							<Setter Property="Background" Value="#FF0066CC"/>
							<Setter Property="Foreground" Value="White"/>
						</Trigger>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Background" Value="#FF0080FF"/>
							<Setter Property="Foreground" Value="Black"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</Calendar.CalendarButtonStyle>
		</Calendar>

		<!-- Кнопки -->
		<StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0 10 0 0">
			<Button x:Name="CancelButton" Content="Отмена" Width="80" Click="Cancel_Click"/>
			<Button x:Name="SelectButton" Content="Выбрать" Width="80" IsDefault="True" Click="Select_Click"/>
		</StackPanel>
	</Grid>
</Window>