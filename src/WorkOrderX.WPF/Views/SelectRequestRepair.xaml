<Window x:Class="WorkOrderX.WPF.Views.SelectRequestRepair"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		mc:Ignorable="d"
		Icon="/Resources/Request.ico"
		SizeToContent="WidthAndHeight"
		Title="Заявка на ремонт"
		WindowStartupLocation="CenterScreen"
		Background="#FFF0F5F5"
		Closing="Window_Closing">

	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>

		<Style TargetType="ComboBox">
			<Setter Property="Background" Value="#FFE6F2FF"/>
			<Setter Property="BorderBrush" Value="#FF6699CC"/>
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="Height" Value="30"/>
			<Setter Property="Margin" Value="0 0 0 10"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderBrush" Value="#FF6699CC"/>
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="Margin" Value="0 0 0 10"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Padding" Value="5"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
		</Style>

		<Style TargetType="Button">
			<Setter Property="Background" Value="#FF0066CC"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="#FF003366"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Padding" Value="10 5"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF0080FF"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Separator">
			<Setter Property="Background" Value="#FF6699CC"/>
			<Setter Property="Margin" Value="10 15 10 15"/>
			<Setter Property="Height" Value="2"/>
		</Style>
	</Window.Resources>

	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<StackPanel Margin="20" Width="750">
			<!-- Заголовок -->
			<Border Background="#FF0066CC" CornerRadius="5" Padding="10" Margin="0 0 0 20">
				<TextBlock Text="{Binding TextNumberRequest}"
						   FontSize="24"
						   FontWeight="Bold"
						   Foreground="White"
						   HorizontalAlignment="Center"/>
			</Border>

			<!-- Основная информация -->
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="230"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

				<!-- Основные поля -->
				<TextBlock Text="Дата создания:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CreatedAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						   Grid.Row="0" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Дата плана:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.PlannedAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						   Grid.Row="1" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Дата последнего изменения:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.UpdatedAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						   Grid.Row="2" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Дата завершения:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CompletionAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						   Grid.Row="3" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>


				<TextBlock Text="Статус заявки:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" FontSize="16" Margin="0 20 0 0"/>
				<TextBlock Text="{Binding ItemApplicationStatus.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						   Grid.Row="4" Grid.Column="2" FontWeight="DemiBold" FontSize="16" Margin="0 20 0 0"/>

				<TextBlock Text="Заказчик:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CustomerEmployee.Name}" Grid.Row="5" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Участок:" Grid.Row="6" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CustomerEmployee.Department, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						   Grid.Row="6" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Телефон:" Grid.Row="7" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CustomerEmployee.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						   Grid.Row="7" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<Separator Grid.Row="8" Grid.ColumnSpan="3"/>

				<!-- Оборудование -->
				<TextBlock Text="Тип инструмента:" Grid.Row="9" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="9" Grid.Column="2"
						  ItemsSource="{Binding EquipmentTypes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						  SelectedItem="{Binding ItemEqType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  DisplayMemberPath="Description"
						  IsEnabled="{Binding IsCustomerUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Вид инструмента:" Grid.Row="10" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="10" Grid.Column="2"
						  ItemsSource="{Binding Kinds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						  SelectedItem="{Binding ItemKind, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  DisplayMemberPath="Description"
						  IsEnabled="{Binding IsCustomerUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Модель инструмента:" Grid.Row="11" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="11" Grid.Column="2"
						  ItemsSource="{Binding Models, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						  SelectedItem="{Binding ItemModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  DisplayMemberPath="Description"
						  IsEnabled="{Binding IsCustomerUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Инвентарный номер:" Grid.Row="12" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBox Grid.Row="12" Grid.Column="2"
						  Text="{Binding SelectProcessRequest.SerialNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  IsEnabled="{Binding IsCustomerUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Тип поломки:" Grid.Row="13" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="13" Grid.Column="2"
						  ItemsSource="{Binding TypeBreakdowns, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						  SelectedItem="{Binding ItemBreak, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  DisplayMemberPath="Description"
						  IsEnabled="{Binding IsCustomerUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Важность заявки:" Grid.Row="14" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="14" Grid.Column="2"
						  ItemsSource="{Binding Importances, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						  SelectedItem="{Binding ItemImport, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  DisplayMemberPath="Description"
						  IsEnabled="{Binding IsCustomerUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Описание неисправности:" Grid.Row="15" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" Margin="0 10 0 5"/>
				<TextBox Grid.Row="16" Grid.ColumnSpan="3" Height="auto" MinHeight="60" TextWrapping="Wrap" AcceptsReturn="True"
						 Text="{Binding SelectProcessRequest.DescriptionMalfunction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						 IsEnabled="{Binding IsCustomerUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Комментарии специалистов:" Grid.Row="17" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" Margin="0 10 0 5"/>
				<TextBox Grid.Row="18" Grid.ColumnSpan="3"  Height="auto" MinHeight="80" TextWrapping="Wrap" AcceptsReturn="True"
						 Text="{Binding SelectProcessRequest.InternalComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						 IsEnabled="{Binding IsExecutor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<CheckBox Grid.Row="19" Grid.Column="0" Content="Печать заявки" 
						  FontSize="16" Margin="0 5 0 0" 
						  IsEnabled="{Binding IsCustomerUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  Foreground="#FF003366"
						  Visibility="Collapsed"/>

				<!-- Кнопки действий -->
				
				<!-- Кнопки заказчика -->
				<StackPanel Grid.Row="20" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
					
					<Button Content="Изменить" Width="120" FontSize="14"
							Visibility="{Binding IsCustomerVisibilityUpdate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Command="{Binding UpdateCommand}" Margin="10,0"/>
					
					<Button Content="Сохранить" Width="120" FontSize="14"
							Visibility="{Binding IsCustomerVisibilitySave, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Command="{Binding SaveRequestCommand}" Margin="10,0"/>
				</StackPanel>

				<!-- Основные кнопки исполнителя -->
				<StackPanel Grid.Row="21" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
					
					<Button Content="Принять в работу" Width="150" FontSize="14"
							Visibility="{Binding IsExecutorVisibilityInWorkButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Command="{Binding InWorkCommand}" Margin="10,0"/>
					
					<Button Content="Выполнено" Width="120" FontSize="14"
							Visibility="{Binding IsExecutorVisibilityDoneButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Command="{Binding DoneCommand}" Margin="10,0"/>
					
					<Button Content="Сохранить коммент." Width="160" FontSize="14"
							Visibility="{Binding IsExecutorVisibilityDoneButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Command="{Binding SaveCommentCommand}" Margin="10,0"/>
				</StackPanel>

				<!-- Кнопки управления статусом -->
				<StackPanel Grid.Row="22" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
					
					<Button Content="Возврат" Width="120" FontSize="14"
							Visibility="{Binding IsExecutorVisibilityReturnedButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							Command="{Binding ReturnedCommand}" Margin="10,0"/>
					
					<Button Content="Отклонить" Width="120" FontSize="14" Margin="10,0"
							Visibility="{Binding IsExecutorVisibilityRejectedButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
							Command="{Binding RejectedCommand}"/>
					
					<Button Content="Отложить" Width="120" FontSize="14" Margin="10,0"
							Visibility="{Binding IsExecutorVisibilityPostponedButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
							Command="{Binding PostponedCommand}"/>
					
					<Button Content="Перенаправить" Width="140" FontSize="14" Margin="10,0"
							Visibility="{Binding IsExecutorVisibilityRedirectedButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
							Command="{Binding RedirectedCommand}"/>
				</StackPanel>

			</Grid>
		</StackPanel>
	</ScrollViewer>
</Window>