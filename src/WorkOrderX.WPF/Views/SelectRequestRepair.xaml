<Window x:Class="WorkOrderX.WPF.Views.SelectRequestRepair"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d"
        Icon="/Resources/Request.ico"
        Height="1000" 
        Width="850"
        Title="Заявка на ремонт"
        WindowStartupLocation="CenterScreen"
        Background="#FFF0F5F5">

	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>

		<Style TargetType="ComboBox">
			<Setter Property="Background" Value="#FFE6F2FF"/>
			<Setter Property="BorderBrush" Value="#FF6699CC"/>
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="Height" Value="30"/>
			<Setter Property="Margin" Value="0 0 0 10"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderBrush" Value="#FF6699CC"/>
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="Margin" Value="0 0 0 10"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Padding" Value="5"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
		</Style>

		<Style TargetType="Button">
			<Setter Property="Background" Value="#FF0066CC"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="#FF003366"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Padding" Value="10 5"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF0080FF"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Separator">
			<Setter Property="Background" Value="#FF6699CC"/>
			<Setter Property="Margin" Value="10 15 10 15"/>
			<Setter Property="Height" Value="2"/>
		</Style>
	</Window.Resources>

	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<StackPanel Margin="20" Width="750">
			<!-- Заголовок -->
			<Border Background="#FF0066CC" CornerRadius="5" Padding="10" Margin="0 0 0 20">
				<TextBlock Text="{Binding TextNumberRequest}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
			</Border>

			<!-- Основная информация -->
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="220"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

				<!-- Основные поля -->
				<TextBlock Text="Дата создания:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CreatedAt}" Grid.Row="0" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Дата плана:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.PlannedAt}" Grid.Row="1" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Статус заявки:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding ItemApplicationStatus.Description}" Grid.Row="2" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Заказчик:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CustomerEmployee.Name}" Grid.Row="3" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Участок:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CustomerEmployee.Department}" Grid.Row="4" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<TextBlock Text="Телефон:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="{Binding SelectProcessRequest.CustomerEmployee.Phone}" Grid.Row="5" Grid.Column="2" FontWeight="DemiBold" FontSize="16"/>

				<Separator Grid.Row="6" Grid.ColumnSpan="3"/>

				<!-- Оборудование -->
				<TextBlock Text="Тип оборудования:" Grid.Row="7" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="7" Grid.Column="2"
                          ItemsSource="{Binding EquipmentTypes}" 
                          SelectedItem="{Binding ItemEqType}"
                          DisplayMemberPath="Description"
                          IsEnabled="{Binding IsCustomerUpdate}"/>

				<TextBlock Text="Вид оборудования:" Grid.Row="8" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="8" Grid.Column="2"
                          ItemsSource="{Binding Kinds}" 
                          SelectedItem="{Binding ItemKind}"
                          DisplayMemberPath="Description"
                          IsEnabled="{Binding IsCustomerUpdate}"/>

				<TextBlock Text="Модель оборудования:" Grid.Row="9" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="9" Grid.Column="2"
                          ItemsSource="{Binding Models}" 
                          SelectedItem="{Binding ItemModel}"
                          DisplayMemberPath="Description"
                          IsEnabled="{Binding IsCustomerUpdate}"/>

				<TextBlock Text="Серийный номер:" Grid.Row="10" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<TextBox Grid.Row="10" Grid.Column="2"
                          Text="{Binding SelectProcessRequest.SerialNumber}"
                          IsEnabled="{Binding IsCustomerUpdate}"/>

				<TextBlock Text="Тип поломки:" Grid.Row="11" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="11" Grid.Column="2"
                          ItemsSource="{Binding TypeBreakdowns}" 
                          SelectedItem="{Binding ItemBreak}"
                          DisplayMemberPath="Description"
                          IsEnabled="{Binding IsCustomerUpdate}"/>

				<TextBlock Text="Важность заявки:" Grid.Row="12" Grid.Column="0" FontWeight="Bold" FontSize="16"/>
				<ComboBox Grid.Row="12" Grid.Column="2"
                          ItemsSource="{Binding Importances}" 
                          SelectedItem="{Binding ItemImport}"
                          DisplayMemberPath="Description"
                          IsEnabled="{Binding IsCustomerUpdate}"/>

				<TextBlock Text="Описание неисправности:" Grid.Row="13" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" Margin="0 10 0 5"/>
				<TextBox Grid.Row="14" Grid.ColumnSpan="3" Height="80" 
                         Text="{Binding SelectProcessRequest.DescriptionMalfunction}"
                         IsEnabled="{Binding IsCustomerUpdate}"/>

				<TextBlock Text="Комментарии специалистов:" Grid.Row="15" Grid.ColumnSpan="3" FontWeight="Bold" FontSize="16" Margin="0 10 0 5"/>
				<TextBox Grid.Row="16" Grid.ColumnSpan="3" Height="120" 
                         Text="{Binding SelectProcessRequest.InternalComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsExecutor}"/>

				<CheckBox Grid.Row="17" Grid.Column="0" Content="Печать заявки" 
                          FontSize="16" Margin="0 15 0 20" 
                          IsEnabled="{Binding IsCustomerUpdate}"
                          Foreground="#FF003366"/>

				<!-- Кнопки действий -->
				<StackPanel Grid.Row="18" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
					<Button Content="Отклонить" Width="120"
                            Visibility="{Binding IsExecutorVisibilityButton}"/>

					<Button Content="Принять в работу" Width="150" Margin="10 0"
                            Visibility="{Binding IsExecutorVisibilityInWorkButton}"
							Command="{Binding InWorkCommand}"/>

					<Button Content="Выполнено" Width="150" Margin="10 0"
                            Visibility="{Binding IsExecutorVisibilityDoneButton}"/>


					<Button Content="Возврат" Width="120" Margin="10 0"
                            Visibility="{Binding IsExecutorVisibilityButton}"/>

					<Button Content="Перенаправить" Width="150"
                            Visibility="{Binding IsExecutorVisibilityButton}"/>
				</StackPanel>

				<StackPanel Grid.Row="19" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15">
					<Button Content="Изменить" Width="120"
                            Visibility="{Binding IsCustomerVisibilityUpdate}"/>

					<Button Content="Сохранить" Width="150" Margin="10 0"
                            Visibility="{Binding IsCustomerVisibilitySave}"/>
				</StackPanel>
			</Grid>
		</StackPanel>
	</ScrollViewer>
</Window>