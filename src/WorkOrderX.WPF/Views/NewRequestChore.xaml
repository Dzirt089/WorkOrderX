<Page x:Class="WorkOrderX.WPF.Views.NewRequestChore"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:WorkOrderX.WPF.Views"
	  mc:Ignorable="d" 
	  d:DesignHeight="350" d:DesignWidth="800"
	  Title="NewRequestChore">

	<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
		<StackPanel Margin="20" Width="600">
			<!-- Заголовок -->
			<!--
			<TextBlock Text="Новая Заявка"
					   FontSize="20"
					   FontWeight="Bold"
					   Margin="0 0 0 20"
					   HorizontalAlignment="Center"/>-->

			<!-- Основная информация -->
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>

				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="220"/>
					<ColumnDefinition />
				</Grid.ColumnDefinitions>

				<TextBlock Text="Причина обращения: " Grid.Row="1" Grid.ColumnSpan="2" FontWeight="Bold" Margin="0 0 0 10" FontSize="16"/>
				<TextBox Grid.Row="2" Grid.ColumnSpan="2" Margin="0 0 0 20" 
						 Height="60" FontSize="16"
						 TextWrapping="Wrap" AcceptsReturn="True"
						 Text="{Binding ProcessRequestNew.DescriptionMalfunction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Место расположение: " Grid.Row="3" Grid.ColumnSpan="2" FontWeight="Bold" Margin="0 0 0 5" FontSize="16"/>
				<TextBox Grid.Row="4" Grid.ColumnSpan="2" Margin="0 0 0 20" 
						 Height="60" FontSize="16"
						 TextWrapping="Wrap" AcceptsReturn="True"
						 Text="{Binding ProcessRequestNew.Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<TextBlock Text="Важность заявки:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" Margin="0 0 0 10" FontSize="16"/>
				<ComboBox Grid.Row="5" Grid.Column="1" Margin="0 0 0 20" FontSize="16"
						  ItemsSource="{Binding Importances, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
						  SelectedItem="{Binding ItemImport, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						  DisplayMemberPath="Description"/>

				

				<CheckBox Grid.Row="8" Grid.Column="0" Content="Печать заявки" 
						  FontSize="16" Margin="0 10 0 50"
						  Visibility="Collapsed"/>

				<Button Grid.Row="9" Grid.Column="0" Content="Отмена" 
						Height="30" Width="120" FontSize="18" 
						HorizontalAlignment="Left" Margin="10 0 0 0"
						Command="{Binding CancelRequestOrderCommand}"/>

				<Button Grid.Row="9" Grid.Column="1" Content="Отправить" 
						Height="30" Width="120" FontSize="18" 
						HorizontalAlignment="Right" Margin="0 0 10 0"
						Command="{Binding SaveAndSendRequestOrderCommand}"/>

			</Grid>

		</StackPanel>

	</ScrollViewer>
</Page>
