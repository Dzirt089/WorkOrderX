<Window x:Class="WorkOrderX.WPF.Views.CommentSelectionDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		mc:Ignorable="d"
		Icon="/Resources/Request.ico"
		Title="Причина" 
		Height="250" Width="400"
		WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize"
		Background="#FFF0F5F5">

	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderBrush" Value="#FF6699CC"/>
			<Setter Property="Foreground" Value="#FF003366"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="AcceptsReturn" Value="True"/>
			<Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
			<Setter Property="Padding" Value="5"/>
		</Style>

		<Style TargetType="Button">
			<Setter Property="Background" Value="#FF0066CC"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="#FF003366"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Padding" Value="8 4"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#FF0080FF"/>
				</Trigger>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Background" Value="#FFCCCCCC"/>
					<Setter Property="Foreground" Value="#FF666666"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Заголовок -->
		<Border Background="#FF0066CC" CornerRadius="5" Padding="5" Margin="0 0 0 10">
			<TextBlock Text="Введите обязательный комментарий:" 
					   FontSize="16"
					   FontWeight="Bold" Foreground="White"
					   HorizontalAlignment="Center"/>
		</Border>

		<!-- Текстовое поле для комментария -->
		<TextBox Grid.Row="1" 
				 Text="{Binding Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				 Margin="0 0 0 10"
				 FontSize="14"
				 FontWeight="DemiBold"
				 VerticalAlignment="Stretch"
				 VerticalContentAlignment="Top"/>

		<!-- Блок информации -->
		<TextBlock Grid.Row="2" 
				   Text="* Поле обязательно для заполнения"
				   FontSize="12"
				   Foreground="Red"
				   Margin="0 0 0 10"/>

		<!-- Кнопки -->
		<StackPanel Grid.Row="3" Orientation="Horizontal" 
					HorizontalAlignment="Right" Margin="0 10 0 0">
			<Button Content="Отмена" Width="80"  
					Click="Cancel_Click"/>
			<Button Content="OK" Width="80" IsDefault="True"
					Click="Select_Click"
					IsEnabled="{Binding IsCommentValid}"/>
		</StackPanel>
	</Grid>
</Window>